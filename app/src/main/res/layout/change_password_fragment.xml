<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/timobg3"
    tools:context=".fragment.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:srcCompat="@drawable/avatar" />
    </LinearLayout>

    <TextView
        android:layout_width="304dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_bottom"
        android:fontFamily="@font/icielplanton"
        android:text="Update Password"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/border_timo"
        android:padding="20dp">

        <EditText
            android:id="@+id/edt_user_email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Email:"
            android:textSize="20dp"
            android:textColorHint="@color/avocado"
            android:background="@drawable/border_add_text"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="15dp"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_add_text"
            android:hint="Old Password: "
            android:textColorHint="@color/avocado"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edt_old_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_add_text"
            android:hint="New Password: "
            android:textColorHint="@color/avocado"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <EditText
            android:id="@+id/edt_re_passWord"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/border_add_text"
            android:hint="Confirm Password: "
            android:textColorHint="@color/avocado"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp" />
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/border_bottom"
            android:fontFamily="@font/bungee"
            android:text="Confirm"
            android:textColor="#FFF"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>