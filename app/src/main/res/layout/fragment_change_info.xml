<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/timobg3"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ChangeInfoFragment">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:srcCompat="@drawable/avatar" />
    </LinearLayout>

    <TextView
        android:layout_width="196dp"
        android:layout_height="47dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border_bottom"
        android:gravity="center"
        android:fontFamily="@font/icielplanton"
        android:text="Update Info"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@drawable/border_timo"
        android:padding="20dp">

        <EditText
            android:id="@+id/ed_ChangeName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:hint="Name: "
            android:inputType="text"
            android:textColorHint="@color/avocado"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_ChangeAddress"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:hint="Address: "
            android:textColorHint="@color/avocado"
            android:inputType="text"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/ed_ChangePhone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:gravity="center_vertical"
            android:hint="Phone: "
            android:textColorHint="@color/avocado"
            android:inputType="number"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/ed_ChangeNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border_add_text"
            android:gravity="center_vertical"
            android:hint="Date of Birth: "
            android:paddingLeft="10dp"
            android:textColorHint="@color/avocado"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_bottom"
            android:fontFamily="@font/bungee"
            android:gravity="center"
            android:text="Confirm"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>